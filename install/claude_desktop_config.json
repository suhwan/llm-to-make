{
  "mcpServers": {
    "_comment": "=== Required MCP - Replace YOUR_MAKE_MCP_URL with your actual URL from Make.com ===",

    "make": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "YOUR_MAKE_MCP_URL"]
    },
    "airtable": {
      "command": "npx",
      "args": ["-y", "airtable-mcp-server"],
      "env": {
        "AIRTABLE_API_KEY": "YOUR_AIRTABLE_API_KEY",
        "AIRTABLE_BASE_ID": "YOUR_AIRTABLE_BASE_ID"
      }
    },

    "_comment2": "=== Optional MCP (delete if not needed) ===",

    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "YOUR_GITHUB_TOKEN"
      }
    },
    "gdrive": {
      "command": "npx",
      "args": ["-y", "@isaacphi/mcp-gdrive"]
    }
  }
}
