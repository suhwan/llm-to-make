{
  "name": "AI Caption Generator",
  "description": "이미지를 분석하여 SNS 캡션을 자동 생성하는 시나리오",
  "version": "1.0.0",
  "flow": [
    {
      "id": 1,
      "module": "airtable:TriggerWatchRecords",
      "version": 3,
      "description": "트리거: SNS_Posts 새 레코드 감지",
      "parameters": {
        "__IMTCONN__": "{{AIRTABLE_CONNECTION_ID}}"
      },
      "mapper": {
        "base": "{{AIRTABLE_BASE_ID}}",
        "table": "SNS_Posts",
        "triggerField": "Created_At",
        "formula": "AND({Image}!='', {Caption}='')",
        "maxRecords": 10
      }
    },
    {
      "id": 2,
      "module": "builtin:BasicRouter",
      "version": 1,
      "description": "라우터: AI 서비스 선택"
    },
    {
      "id": 7,
      "module": "airtable:ActionUpdateRecord",
      "version": 3,
      "description": "SNS_Posts 캡션 저장",
      "parameters": {
        "__IMTCONN__": "{{AIRTABLE_CONNECTION_ID}}"
      }
    }
  ],
  "scheduling": {
    "type": "indefinitely",
    "interval": 900
  },
  "notes": {
    "placeholders": {
      "AIRTABLE_CONNECTION_ID": "12046948 (기존 연결)",
      "AIRTABLE_BASE_ID": "appzQEgOxUpCYGmk7",
      "OPENAI_CONNECTION_ID": "추가 필요",
      "GEMINI_API_KEY": "Google Gemini API 키"
    }
  }
}